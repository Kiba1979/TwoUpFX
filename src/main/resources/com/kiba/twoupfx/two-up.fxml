<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiba.twoupfx.LoginController">
    <top>
        <Text text="Welcome to Adam's Anzac Day Two-Up Adventure!" textAlignment="CENTER" wrappingWidth="801.357421875">
            <font>
                <Font name="Albertus Extra Bold" size="25" />
            </font>
        </Text>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="30">
            <HBox alignment="CENTER" spacing="10">
                <Text text="Username:">
                    <font>
                        <Font size="15" />
                    </font>
                </Text>
                <TextField fx:id="username" promptText="Username">
                    <font>
                        <Font size="15" />
                    </font>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Text text="Password:">
                    <font>
                        <Font size="15" />
                    </font>
                </Text>
                <PasswordField fx:id="password" promptText="Password">
                    <font>
                        <Font size="15" />
                    </font>
                </PasswordField>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="login" defaultButton="true" text="Login">
                    <font>
                        <Font size="15" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="TOP_CENTER" prefHeight="50" spacing="10">
            <Text text="Don't have an account? -&gt;">
                <font>
                    <Font size="15" />
                </font>
            </Text>
            <Button fx:id="signup" text="Sign up">
                <font>
                    <Font size="15" />
                </font>
            </Button>
            <Button fx:id="exit" text="Exit game!" onAction="#closeGame">
                <font>
                    <Font size="15" />
                </font>
            </Button>
        </HBox>
    </bottom>
   <left>
      <ImageView fitHeight="380.0" fitWidth="200.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@img/two_up_kip_v.png" />
         </image>
      </ImageView>
   </left>
   <right>
      <ImageView fitHeight="380.0" fitWidth="94.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@img/two_up_kip_v.png" />
         </image>
      </ImageView>
   </right>
</BorderPane>
