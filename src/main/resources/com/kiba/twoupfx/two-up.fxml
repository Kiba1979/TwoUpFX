<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiba.twoupfx.LoginController">
    <top>
        <VBox spacing="20" style="-fx-background-color: #FFCD00;">
            <Text text="Welcome to Adam's Anzac Day Two-Up Adventure!" textAlignment="CENTER" wrappingWidth="801.357421875">
                <font>
                    <Font size="30.0" />
                </font>
            </Text>

        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="410.0" prefWidth="566.0" spacing="30" style="-fx-background-color: #00843D;">
            <HBox alignment="CENTER" spacing="10">
                <Text text="Username:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Text>
                <TextField fx:id="username" promptText="Username">
                    <font>
                        <Font size="15" />
                    </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" prefHeight="32.0" prefWidth="614.0" spacing="10">
                <Text text="Password:">
                    <font>
                        <Font size="15" />
                    </font>
                </Text>
                <PasswordField fx:id="password" prefHeight="32.0" prefWidth="173.0" promptText="Password">
                    <font>
                        <Font size="15" />
                    </font>
                </PasswordField>
            </HBox>
            <HBox alignment="CENTER">
                <Button fx:id="login" defaultButton="true" prefHeight="32.0" prefWidth="84.0" text="Login" onAction="#handleLoginButton">
                    <font>
                        <Font size="15" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="TOP_CENTER" prefHeight="50" spacing="10" style="-fx-background-color: #FFCD00;">
            <Text text="Don't have an account? " wrappingWidth="235.916015625">
                <font>
                    <Font size="18.0" />
                </font>
            </Text>
            <Button fx:id="signup" prefHeight="32.0" prefWidth="81.0" text="Sign up">
                <font>
                    <Font size="15" />
                </font>
            </Button>
            <Button fx:id="exit" onAction="#closeGame" prefHeight="32.0" prefWidth="97.0" text="Exit game!">
                <font>
                    <Font size="15" />
                </font>
            </Button>
        </HBox>
    </bottom>
    <left>
        <ImageView fitHeight="410.0" fitWidth="135.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <Image url="@img/two_up_kip_v.png"/>
        </ImageView>
    </left>
    <right>
        <ImageView fitHeight="410.0" fitWidth="135.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <Image url="@img/two_up_kip_v.png"/>
        </ImageView>
    </right>
</BorderPane>
