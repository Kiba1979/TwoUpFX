<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiba.twoupfx.GameTimeController">
    <top>
        <VBox style="-fx-background-color: #FFCD00;">
            <Label fx:id="welcomeText" alignment="CENTER" prefHeight="61.0" prefWidth="799.0" text="Welcome " textAlignment="CENTER">
                <font>
                    <Font name="Playpen Sans" size="24" />
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="gamesWon" text="Won: 0" />
                <Label fx:id="gamesPlayed" text="Played: 0" />
                <Label fx:id="winPercentage" text="Win Percentage: 0%" />
            </HBox>
        </VBox>

    </top>
    <center>
        <VBox prefWidth="50">
            <ImageView fitHeight="100.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
        </VBox>
        <VBox prefWidth="50">
            <ImageView fitHeight="100.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
        </VBox>

    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #FFCD00;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Finished playing?">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Button fx:id="logout" mnemonicParsing="false" onAction="#logoutScreen" style="-fx-background-color: transparent; -fx-cursor: hand;" text="Quit">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>
    <left>
        <VBox alignment="CENTER" prefHeight="339.0" prefWidth="250.0" spacing="20" style="-fx-background-color: #00843D;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Make your selection.">
                   <font>
                      <Font size="18.0" />
                   </font>
                </Label>
                <VBox spacing="20">
                    <RadioButton fx:id="hh" mnemonicParsing="false" onAction="#activateButton" text="Both Heads">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <toggleGroup>
                     <ToggleGroup fx:id="choices" />
                  </toggleGroup>
                  </RadioButton>
                    <RadioButton fx:id="tt" mnemonicParsing="false" onAction="#activateButton" text="Both Tails" toggleGroup="$choices">
                  <font>
                     <Font size="16.0" />
                  </font></RadioButton>
                    <RadioButton fx:id="ht" mnemonicParsing="false" onAction="#activateButton" text="One Heads, One Tails" toggleGroup="$choices">
                  <font>
                     <Font size="16.0" />
                  </font></RadioButton>
                </VBox>
                <Label fx:id="rbSelection">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Button fx:id="spinner" disable="true" mnemonicParsing="false" text="Come in spinner!" />
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="30.0" />
         </padding>
        </VBox>
    </left>
    <right>
        <TableView fx:id="leaderboard" prefHeight="321.0" prefWidth="273.0">
            <columns>
                <TableColumn id="player" fx:id="player" prefWidth="85" text="Player" />
                <TableColumn id="wins" fx:id="wins" prefWidth="50" text="Wins" />
                <TableColumn id="played" fx:id="played" prefWidth="50" text="Played" />
                <TableColumn id="winPercent" fx:id="percent" prefWidth="85" sortType="DESCENDING" text="Win %" />
            </columns>
        </TableView>
    </right>
</BorderPane>
