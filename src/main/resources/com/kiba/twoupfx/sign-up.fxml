<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kiba.twoupfx.SignUpController">
   <top>
      <HBox alignment="BOTTOM_CENTER" prefHeight="50">
         <Text text="Sign Up!">
            <font>
               <Font name="Albertus Extra Bold" size="20" />
            </font>
         </Text>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30">
         <HBox alignment="CENTER" spacing="10">
            <Text text="Username:" />
            <TextField fx:id="username" promptText="Username" />
         </HBox>
         <HBox alignment="CENTER" spacing="10">
            <Text text="Password:" />
            <PasswordField fx:id="password" promptText="Password" />
         </HBox>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <Button fx:id="signup" defaultButton="true" text="Sign up" />
         <Button fx:id="back" onAction="#handleBackButton" text="Back" />
      </HBox>
   </bottom>
   <left>
      <ImageView fitHeight="380.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@img/two_up_kip_v.png" />
         </image>
      </ImageView>
   </left>
   <right>
      <ImageView fitHeight="380.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@img/two_up_kip_v.png" />
         </image>
      </ImageView>
   </right>
</BorderPane>